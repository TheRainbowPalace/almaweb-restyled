{
  "manifest_version": 2,
  "name": "Almaweb Restyled",
  "version": "1.0.0",

  "description": "Add a responsive design to Almaweb (University of Leipzig)",

  "content_scripts": [
    {
      "matches": ["https://almaweb.uni-leipzig.de/*"],
      "run_at": "document_idle",
      "js": ["inject.js"]
    }
  ],

  "icons": {
    "48": "images/Icon-48.png",
    "96": "images/Icon-96.png"
  }
}