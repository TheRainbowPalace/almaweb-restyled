{
  "name": "Responsive Almaweb",
  "version": "1.0",
  "description": "Add a responsive design to Almaweb (University of Leipzig)",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://almaweb.uni-leipzig.de/*"],
      "run_at": "document_idle",
      "js": ["inject.js"]
    }
  ],
  "icons": {
    "16": "images/almaweb-logo16.png",
    "32": "images/almaweb-logo32.png",
    "48": "images/almaweb-logo48.png",
    "128": "images/almaweb-logo128.png"
  },
  "manifest_version": 2
}