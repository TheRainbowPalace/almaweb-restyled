{
  "manifest_version": 2,
  "name": "Almaweb Restyled",
  "version": "1.0.0",
  "description": "Add a responsive design to Almaweb (University of Leipzig)",
  "permissions": ["activeTab"],

  "content_scripts": [
    {
      "matches": ["https://almaweb.uni-leipzig.de/*"],
      "run_at": "document_idle",
      "js": ["inject.js"]
    }
  ],
  "icons": {
    "16": "images/Icon-16.png",
    "32": "images/Icon-32.png",
    "48": "images/Icon-48.png",
    "128": "images/Icon-128.png"
  }
}